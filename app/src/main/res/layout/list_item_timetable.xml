<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <View
        android:id="@+id/list_item_timetable_course_view_color"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/highlighted_text_material_dark"/>

    <TextView
        android:id="@+id/list_item_timetable_course_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@+id/list_item_timetable_course_view_color"
        android:text="Course name"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/list_item_timetable_textView_timings"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@+id/list_item_timetable_course_view_color"
        android:layout_below="@+id/list_item_timetable_course_textView_name"
        android:text="Timings"
        android:textSize="16sp"/>
</RelativeLayout>