<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp">

    <View
        android:id="@+id/list_item_course_view_color"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_alignTop="@+id/list_item_course_textView_name"
        android:layout_alignBottom="@+id/list_item_course_textView_minimum_attendance_percentage"
        android:background="@color/highlighted_text_material_dark"/>

    <TextView
        android:id="@+id/list_item_course_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@+id/list_item_course_view_color"
        android:text="Course name"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/list_item_course_textView_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical|left"
        android:layout_below="@+id/list_item_course_textView_name"
        android:layout_toRightOf="@+id/list_item_course_view_color"
        android:text="Course code"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/list_item_course_textView_instructor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical|left"
        android:layout_below="@+id/list_item_course_textView_code"
        android:layout_toRightOf="@+id/list_item_course_view_color"
        android:text="Instructor name"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/list_item_course_textView_minimum_attendance_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical|left"
        android:layout_below="@+id/list_item_course_textView_instructor_name"
        android:layout_toRightOf="@+id/list_item_course_view_color"
        android:text="Minimum attendance percentage"
        android:textSize="20sp"/>
</RelativeLayout>